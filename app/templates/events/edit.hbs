<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <form class="form-horizontal">
      <div class="form-group {{if eventNameIsValid "has-success has-feedback"}} ">

        <label for="eventName">Nome do evento: *</label> {{input type="text" value=model.name class="form-control" id="eventName" placeholder="Nome do evento" autofocus="autofocus"}}

        {{#if eventNameIsValid}}
          <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
        {{/if}}
      </div>

      <div class="form-group {{if eventDateIsValid "has-success has-feedback"}} ">
        <label for="eventDate">Data do evento: *</label> {{bootstrap-datepicker value=model.date type=date autoclose=true todayHighlight=true language="pt-BR" class="date-picker"}}
      </div>

      <div class="form-group {{if eventDescriptionIsValid "has-success has-feedback"}}">
        <label for="eventDescription">Descrição do evento: *</label> {{textarea placeholder="Descrição do evento" value=model.description cols="80" rows="6" class="form-control" id="eventDescription"}}
        {{#if eventDescriptionIsValid}}
          <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
        {{/if}}
      </div>


      <div class="form-group">
        <label for="eventImage">Imagem</label>
        <input type="file" id="eventImage">
      </div>

      <center>
        <button disabled= {{isDisabled}} {{action 'saveEvent'}} type="submit" class="btn btn-lg btn-primary">Enviar</button>
      </center>
    </form>
  </div>

</div>

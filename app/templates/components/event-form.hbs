<div class="panel panel-default">
  <div class="panel-heading">
    <center>
      <strong>{{model.name}}</strong>
    </center>
  </div>
  <div class="panel-body">
    <form class="form-horizontal">
      <div class="form-group">
        <label for="modelName" class="col-sm-2 control-label">Nome do evento</label>
        <div class="col-sm-10">
          {{input value=model.name type="text" class="form-control"}}
        </div>
      </div>

      <div class="form-group">
        <label for="data" class="col-sm-2 control-label">Data do evento</label>
        <div class="col-sm-10">
          {{bootstrap-datepicker value=model.date type=date autoclose=true todayHighlight=true language="pt-BR" class="form-control"}}
        </div>
      </div>

      <div class="form-group">
        <label for="data" class="col-sm-2 control-label">Local do evento</label>
        <div class="col-sm-10">
          {{input value=model.location class="form-control"}}
        </div>
      </div>

      <div class="form-group">
        <label for="data" class="col-sm-2 control-label">Descrição do evento</label>
        <div class="col-sm-10">
          {{textarea value=model.description cols="5" class="form-control"}}
        </div>
      </div>

      <div class="form-group">
        <label for="data" class="col-sm-2 control-label">URL da imagem do evento</label>
        <div class="col-sm-10">
          {{input value=model.picture type="text" class="form-control"}}
        </div>
      </div>


      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <center>
              <button {{action "saveEvent" model}} class="btn btn-default">Salvar evento</button>
          </center>
        </div>
      </div>
    </form>
  </div>
</div>

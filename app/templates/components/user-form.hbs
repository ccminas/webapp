<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default login-panel">
      <div class="panel-body">
        <form>
          <div class="form-group">
            <label for="inputEmail">Email</label>
            {{input value=email type="text" class="form-control" id="inputEmail" placeholder="Email"}}
          </div>
          <div class="form-group">
            <label for="inputPassword">Senha</label>
            {{input value=password type="password" class="form-control" id="inputPassword" placeholder="Password"}}
          </div>
          <center>
            <button {{action "userAction"}} type="submit" class="btn btn-lg btn-primary">{{buttonLabel}}</button>
          </center>
        </form>

      </div>
    </div>
  </div>
</div>
